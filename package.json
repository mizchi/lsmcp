{
  "name": "@mizchi/lsmcp",
  "version": "0.8.3",
  "type": "module",
  "license": "MIT",
  "exports": {
    ".": "./dist/lsmcp.js",
    "./package.json": "./package.json"
  },
  "scripts": {
    "prepublishOnly": "pnpm build",
    "build": "tsdown",
    "watch": "tsdown --watch",
    "typecheck": "tsgo",
    "typecheck:tsc": "tsc --noEmit -p tsconfig.json",
    "lint": "oxlint --quiet --ignore-path=.oxlintignore",
    "lint:refactor": "oxlint",
    "test": "pnpm test:unit && pnpm test:integration",
    "test:unit": "vitest --run --project unit",
    "test:integration": "pnpm build && vitest --run --project=integration",
    "test:adapters": "vitest --run --project=adapters # only local",
    "test:adapters:fsharp": "vitest run tests/adapters/language-tests/fsharp.test.ts",
    "test:adapters:rust": "vitest run tests/adapters/language-tests/rust.test.ts",
    "test:adapters:tsgo": "vitest run tests/adapters/language-tests/tsgo.test.ts",
    "test:adapters:python": "vitest run tests/adapters/language-tests/python.test.ts",
    "test:adapters:moonbit": "vitest run tests/adapters/language-tests/moonbit.test.ts",
    "test:all": "vitest --run",
    "test:watch": "vitest",
    "test:examples": "tsx scripts/check-examples.ts",
    "build:supported-table": "node scripts/build-supported-table.ts",
    "coverage": "vitest run --coverage",
    "format": "biome format --write src/ tests/",
    "format:check": "biome check --linter-enabled=false --formatter-enabled=true src/ tests/",
    "prepare": "husky",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s",
    "version": "conventional-changelog -p angular -i CHANGELOG.md -s && git add CHANGELOG.md"
  },
  "bin": {
    "lsmcp": "./dist/lsmcp.js"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "dependencies": {
    "@types/glob": "^8.1.0",
    "@types/micromatch": "^4.0.9",
    "@types/minimatch": "^5.1.2",
    "glob": "^11.0.3",
    "ignore": "^7.0.5",
    "linguist-languages": "^8.0.0",
    "micromatch": "^4.0.8",
    "minimatch": "^10.0.3",
    "neverthrow": "^8.2.0",
    "ts-blank-space": "^0.6.1",
    "zod": "^3.25.56"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.0.6",
    "@modelcontextprotocol/sdk": "^1.12.1",
    "@moonbit/moonbit-lsp": "^0.1.202506241",
    "@types/node": "^22.15.30",
    "@types/ws": "^8.18.1",
    "@typescript/native-preview": "7.0.0-dev.20250629.1",
    "@vitest/coverage-v8": "^3.2.4",
    "ai": "^4.3.16",
    "conventional-changelog-cli": "^5.0.0",
    "husky": "^9.1.7",
    "jscpd": "^4.0.5",
    "lint-staged": "^16.1.2",
    "memfs": "^4.17.2",
    "oxlint": "^1.1.0",
    "tsdown": "^0.12.7",
    "tsr": "^1.3.4",
    "typescript": "^5.7.3",
    "typescript-language-server": "^4.3.4",
    "vitest": "^3.2.2",
    "vscode-languageserver-protocol": "^3.17.5",
    "vscode-languageserver-types": "^3.17.5",
    "ws": "^8.18.2",
    "zx": "^8.6.1"
  },
  "packageManager": "pnpm@9.15.0"
}
